{
  "compilerOptions": {
    "module": "NodeNext",
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "skipLibCheck": true,
    "isolatedModules": true
  },
  "compileOnSave": true,
  "include": ["src", "src/**/*.test.ts", "src/__tests__/**/*"],
  "exclude": ["node_modules", "lib"]
}
